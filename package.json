{
  "publisher": "ArtemusAI",
  "name": "artemusai-vscode",
  "displayName": "ArtemusAI",
  "description": "Your AI Coding partner.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.50.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "artemusai-vscode-sidebar",
          "icon": "media/robot.svg",
          "title": "Artemus Chat"
        }
      ]
    },
    "views": {
      "artemusai-vscode-sidebar": [
        {
          "type": "webview",
          "id": "artemusai-vscode.chatpanel",
          "name": "Artemus Chat",
          "icon": "media/robot.svg",
          "contextualTitle": "Artemus Chat"
        }
      ]
    },
    "commands": [
      {
        "command": "artemusai-vscode.showInfo",
        "title": "Show Information",
        "category": "ArtemusAI"
      }
    ],
    "keybindings": [
      {
        "command": "editor.action.inlineSuggest.trigger",
        "key": "ctrl+'",
        "when": "editorTextFocus"
      },
      {
        "key": "tab",
        "command": "editor.action.inlineSuggest.commit",
        "when": "editorTextFocus && inlineSuggestionVisible && !editorTabMovesFocus && !suggestWidgetVisible"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "concurrently \"rollup -c -w\" \"webpack --watch\"",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^11.0.1",
    "@rollup/plugin-typescript": "^8.1.0",
    "@tsconfig/svelte": "^1.0.10",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.79.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "concurrently": "^8.2.0",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "rollup": "^2.3.4",
    "rollup-plugin-svelte": "^6.0.0",
    "rollup-plugin-svelte-svg": "^1.0.0-beta.6",
    "rollup-plugin-terser": "^7.0.2",
    "svelte": "^3.31.0",
    "svelte-check": "^1.1.23",
    "svelte-preprocess": "^4.6.1",
    "ts-loader": "^9.4.3",
    "typescript": "^4.9.5",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.1"
  },
  "dependencies": {
    "@types/sha1": "^1.1.3",
    "highlight.js": "^11.8.0",
    "markdown-it": "^13.0.1",
    "node-fetch": "^3.3.2",
    "sha1": "^1.1.1"
  }
}
